<!DOCTYPE html>
<html lang="sv-se">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <script src="https://kit.fontawesome.com/6a0526b489.js" crossorigin="anonymous"></script>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet"
        integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
    <link rel="icon" href="/images/freakyfashion-icon-32x32.png" sizes="32x32">
    <link rel="stylesheet" href="/stylesheets/site.min.css">
    <title>Administration</title>
</head>

<body>

    <!-- header section -->
    <%- include("../../partials/admin-header") %>

    <!-- main section -->
    <main>

        <section id="categories-admin">

            <%- include("../../partials/admin-sidebar") %>
            
            <div class="categories-view-all">

                <div class="box1">
                    <div class="search-field">
                        <i id="search-icon" class="fa-solid fa-magnifying-glass"></i>
                        <input id="search-bar" type="text" placeholder="Filtrera kategorier">
                    </div>
                    <a href="/admin/categories/new" class="btn-new btn-theme">Ny Kategori</a>
                </div>
    
                <div class="categories-view">
    
                    <div class="category-details">
                        <h6>Namn</h6>
                        <% categories.forEach(category => { %>
                            <p>
                                <a href="/admin/categories/<%= category.id %>"><%= category.name %></a>
                            </p>
                        <% }) %>
                    </div>
                    <div class="category-details">
                        <h6>Produkter</h6>
                        <% categories.forEach(category => { %>
                            <p><%= category.productCount %></p>
                        <% }) %>
                    </div>
                    <div class="category-details">
                        <h6></h6>
                        <% categories.forEach(category => { %>
                            <button class="btn-delete" data-delete="/api/categories/<%= category.id %>/delete">
                                <i class="fa-solid fa-trash-can"></i>
                            </button>
                        <% }) %>
                    </div>

                </div>

            </div>

        </section>

    </main>

    <script src="/js/admin.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>

</html>