<!DOCTYPE html>
<html lang="sv-se">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <script src="https://kit.fontawesome.com/6a0526b489.js" crossorigin="anonymous"></script>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet"
        integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
    <link rel="icon" href="/public/images/freakyfashion-icon-32x32.png" sizes="32x32">
    <link rel="stylesheet" href="/public/stylesheets/site.min.css">
    <title>Administration</title>
</head>

<body>

    <!-- header section -->
    <%- include("../../partials/admin-header") %>

    <!-- main section -->
    <main>

        <section id="new-product">

            <%- include("../../partials/admin-sidebar") %>

            <div class="content">
                <h3>Ny produkt</h3>

                <form class="new-product-form" method="post" action="#">

                    <div class="form-group name">
                        <label for="name">Namn</label>
                        <input type="text" id="name" name="name" maxlength="50" required>
                    </div>

                    <div class="form-group description">
                        <label for="description">Beskrivning</label>
                        <textarea id="description" name="description" rows="4"></textarea>
                    </div>

                    <div class="form-group image-url">
                        <label for="image-url">Bild (URL)</label>
                        <input type="url" id="image-url" name="image_url" required>
                    </div>

                    <div class="form-group price">
                        <label for="price">Pris</label>
                        <input type="number" id="price" name="price" min="0" step="0.01">
                    </div>

                    <div class="form-group sku">
                        <label for="sku">SKU</label>
                        <input
                            type="text"
                            id="sku"
                            name="sku"
                            pattern="^[A-Za-z]{3}[0-9]{3}$"
                            title="SKU måste vara i formatet XXXYYY, där X är bokstäver och Y är siffror (t.ex. ABC123)"
                            required>
                    </div>

                    <div class="checkbox">
                        <input type="checkbox" id="publish" name="publish" class="form-check-input">
                        <label for="checkbox-input">Publisera</label>
                    </div>
                    
                    <div class="btn-submit">
                        <button class="btn-theme" type="submit">Lägg till</button>
                    </div>
                      
                </form>

            </div>

        </section>

    </main>

    <script src="/public/js/new-product.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>

</html>