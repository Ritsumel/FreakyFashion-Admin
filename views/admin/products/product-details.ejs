<!DOCTYPE html>
<html lang="sv-se">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <script src="https://kit.fontawesome.com/6a0526b489.js" crossorigin="anonymous"></script>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet"
        integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
    <link rel="icon" href="/images/freakyfashion-icon-32x32.png" sizes="32x32">
    <link rel="stylesheet" href="/stylesheets/site.min.css">
    <title>Administration</title>
</head>

<body>

    <!-- header section -->
    <%- include("../../partials/admin-header") %>

    <!-- main section -->
    <main>

        <section id="admin-product-details">

            <%- include("../../partials/admin-sidebar") %>

            <div class="content">

                <div class="top-container">
                    <h3><%= product.name %></h3>

                    <div class="buttons">
                        <button class="btn-theme" data-delete="/api/products/<%= product.id %>/delete">Radera</button>
                        <% if (product.publishDate) { %>
                            <button class="btn-theme" data-publish="/api/products/<%= product.id %>/toggle-publish">Avpublicera</button>
                        <% } else { %>
                            <button class="btn-theme" data-publish="/api/products/<%= product.id %>/toggle-publish">Publisera</button>
                        <% } %>
                    </div>
                </div>

                <div class="bottom-container">
                    <div class="info">
                        <h6>Namn</h6>
                        <p><%= product.name %></p>
                    </div>

                    <div class="info">
                        <h6>Beskrivning</h6>
                        <p><%= product.description || 'Ingen beskrivning' %></p>
                    </div>

                    <div class="info">
                        <h6>Bild</h6>
                        <img src="<%= product.image_url || '/images/freakyfashion-placeholder.png' %>" alt="<%= product.name %>">
                    </div>

                    <div class="info">
                        <h6>Pris</h6>
                        <p><%= product.price ? product.price.toFixed(2) + ' kr' : 'Ej angivet' %></p>
                    </div>

                    <div class="info">
                        <h6>Publiseringsdatum</h6>
                        <p><%= product.formattedDate || 'Ej publiserad' %></p>
                    </div>

                    <div class="info">
                        <h6>Slug</h6>
                        <p><%= product.slug %></p>
                    </div>
                </div>

            </div>

        </section>

    </main>

    <script src="/js/admin.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>

</html>